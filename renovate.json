{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["ARG BSI_VERSION=(?<currentValue>.+?)\\n"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "containers/BuildSourceImage",
      "extractVersionTemplate": "^v(?<version>.*)(: .+)?$"
    },
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "registry.access.redhat.com/ubi9/ubi:(?<currentValue>[0-9.-]+?)\\n"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "registry.access.redhat.com/ubi9/ubi",
      "extractVersionTemplate": "^registry.access.redhat.com/ubi9/ubi:(?<version>[0-9.-]+)$"
    }
  ]
}
